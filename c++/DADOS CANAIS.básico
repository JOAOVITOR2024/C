#include <iostream>
using namespace std;

int main() {
    int ps=0, cn, ps4=0, ps5=0, ps7=0, ps12=0, f;
    float fn4, fn5, fn7, fn12;

    do {
        cout << "\nescreva quantas pessoas estÃ£o assistindo: ";
        cin >> ps;
        cout << "\nescreva qual canal esta sendo assistido: ";
        cin >> cn;

        switch(cn) {
            case 4: 
                ps4 += ps;
                break;
            case 5:
                ps5 += ps;
                break;
            case 7:
                ps7 += ps;
                break;
            case 12:
                ps12 += ps;
                break;
            default:
                cout << "\ncanal invalido";
        }
    } while(cn != 0);

    f = ps4 + ps5 + ps7 + ps12;

    if (f != 0) {
        fn4 = ps4 / f * 100;
        fn5 = ps5 / f * 100;
        fn7 = ps7 / f * 100;
        fn12 = ps12 / f * 100;

        cout << "\nporcentagem canal 4: " << fn4 <<"%";
        cout << "\nporcentagem canal 5: " << fn5 <<"%";
        cout << "\nporcentagem canal 7: " << fn7 <<"%";
        cout << "\nporcentagem canal 12: " << fn12 <<"%";
    } else {
        cout << "\nNenhum canal foi assistido.";
    }

    return 0;
}
